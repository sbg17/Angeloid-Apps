<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/tab_tab1_welcome_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welcome" />

    <TextView
        android:id="@+id/tab_tab1_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_tab1_welcome_image"
        android:layout_centerHorizontal="true"
        android:text="@string/tab_tab1_welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color03" />

    <TextView
        android:id="@+id/tab_tab1_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_tab1_welcome_text"
        android:layout_centerHorizontal="true"
        android:text="@string/tab_tab1_textview2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color02" />

</RelativeLayout>